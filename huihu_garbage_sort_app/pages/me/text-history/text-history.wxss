/* pages/me/text-history/text-history.wxss */
.container:last-child {
    margin-bottom: calc( var(--footer-height) + 24px );
  }
  
  .background {
    width: 80vw;
    margin-top: 12vh;
  }
  
  .top-label{
    display: flex;
    margin-top: 10px;
    /* margin-left: 25px; */
    margin: 15px 0;
    /* background-color: var(--weui-BG-2); */
    /* border-radius: 2px; */
    overflow: hidden;
    align-items: center;
    /* border-radius: 10rpx; */
    /* box-shadow: 5rpx 5rpx 14rpx rgb(72, 143, 250); */
  }
  .label-text-time{
    /* flex: 1; */
    font-size: 30rpx;
    width: 150rpx;
    margin-left: 30rpx;
    text-align: center;
    font-weight: bolder;
  }
  .label-text-name{
    /* flex: 1; */
    font-size: 30rpx;
    width: 150rpx;
    text-align: center;
    margin-left: 100rpx;
    font-weight: bold;
  }
  .label-text-cat{
    /* flex: 1; */
    font-size: 30rpx;
    width: 150rpx;
    text-align: center;
    margin-left: 90rpx;
    font-weight: bold;
  }
  .title {
    margin-top: 48px;
    font-size: 17px;
    font-weight: bold;
  }
  
  .subtitle {
    margin-top: 9px;
    font-size: 14px;
  }
  
  .history-wrapper{
    margin-top: 10px;
  }
  .index-bd {
    /* padding: 0 15px 20px; */
    padding: 0 15px 20px;
  }
  .kind-list-item-true {
    /* margin: 10px 0; */
    margin: 15px 0;
    background-color: var(--weui-BG-2);
    /* border-radius: 2px; */
    overflow: hidden;
    border-radius: 10rpx;
    box-shadow: 5rpx 5rpx 14rpx #8de0be;
    align-items: left;
    display: flex;
    /* display: flex; */
    /* justify-content: center; */
  }
  .kind-list-text-stime{
    /* flex: 1; */
    font-size: 30rpx;
    margin-left: 15rpx;
    display: flex;
    width: 120rpx;
    text-align: center;
    /* font-weight: bold; */
  }
  .kind-list-text-name{
    /* flex: 1; */
    font-size: 30rpx;
    margin-left: 137rpx;
    display: flex;
    width: 120rpx;
    text-align: center;
    justify-content: center;
    /* font-weight: bold; */
  }
  .kind-list-result{
    font-size: 30rpx;
    margin-left: 120rpx;
    display: flex;
    width: 120rpx;
    font-weight: bolder;
  }
  .kind-list-item-hd {
    /* padding: 15px; */
    padding: 15px;
    display: flex;
    align-items: center;
  
    transition: opacity .3s;
  }
  .kind-list-item-hd-show {
    opacity: .2;
  }
  .kind-list-item-bd {
    height: 0;
    overflow: hidden;
  }
  .kind-list-item-bd-show {
    height: auto;
  }